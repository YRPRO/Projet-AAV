package problemeSacADos;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;

public class MethodeGloutonne {
	
	private static final int poidsMaxDuSac = 10;
	
	public static void main(String[] args) {
		ArrayList<Objet> obj = new ArrayList<Objet>();
		//On rempli la liste avec des objets
		obj.add(new Objet("un", 8, 12)); 
		obj.add(new Objet("deux", 2, 7));
		obj.add(new Objet("deux", 4, 13));
		obj.add(new Objet("deux", 5, 9));
		
		///On trie la liste en fonction des rapports des objets
		Comparator c = new ComparateurRapportValeurPoids();
		Collections.sort(obj, c);
		
		//System.out.println("Trié : " + obj);
		
		//On vérifie si on peut mettre un objet en question dans le sac
		Sac s = new Sac();
		objetPotentiel(s, obj);
		
	}
	
	//Vérification sur les poids
	public static ArrayList<Objet> objetPotentiel(Sac s, ArrayList<Objet> obj) {
		int controlePoids = 0;
			for(int i=0; i<obj.size(); i++) {
				if(obj.get(i).getPoids() <= poidsMaxDuSac) {
					s.getObjets().add(obj.get(i));
					controlePoids += obj.get(i).getPoids();
					if(controlePoids + obj.get(i+1).getPoids()<= poidsMaxDuSac) {
						s.getObjets().add(obj.get(i+1));
						controlePoids += obj.get(i+1).getPoids();
					}
				}	
			}
			return s.getObjets();	
	}
}




